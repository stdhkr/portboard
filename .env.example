# Portboard Environment Configuration
# Copy this file to `.env` and customize as needed

# ===========================
# Server Configuration
# ===========================

# Port number for the server (default: 3033)
# Note: If this port is in use, the server will automatically try PORT+1, PORT+2, etc.
PORT=3033

# Default port to try first (default: 3033)
# DEFAULT_PORT=3033

# Maximum number of port attempts when default port is unavailable (default: 10)
# MAX_PORT_ATTEMPTS=10

# Host binding address (default: 127.0.0.1 for localhost-only)
# WARNING: Binding to 0.0.0.0 exposes the server to the network
HOST=127.0.0.1

# Default host binding address (default: 127.0.0.1)
# DEFAULT_HOST=127.0.0.1

# ===========================
# Frontend Development Server
# ===========================

# Vite development server port (default: 3000)
# Also used by backend for self-port protection
VITE_DEV_PORT=3000

# ===========================
# Frontend API Configuration
# ===========================

# API port (used by Vite for build-time URL generation)
VITE_API_PORT=3033

# API host (used by Vite for build-time URL generation)
VITE_API_HOST=127.0.0.1

# Full API base URL (optional, overrides auto-detection)
# VITE_API_BASE_URL=http://127.0.0.1:3033/api

# ===========================
# Cache Configuration
# ===========================

# Directory for icon cache (relative to system temp dir)
# Default: /tmp/portboard-icons (macOS/Linux)
# ICON_CACHE_DIR=portboard-icons

# ===========================
# Timing Configuration
# ===========================

# Auto-refresh interval for port list (milliseconds)
# Default: 5000 (5 seconds)
# AUTO_REFRESH_INTERVAL=5000

# Docker logs auto-refresh interval (milliseconds)
# Default: 5000 (5 seconds)
# DOCKER_LOGS_REFRESH=5000

# Copy button feedback timeout (milliseconds)
# Default: 2000 (2 seconds)
# COPY_FEEDBACK_TIMEOUT=2000

# Dialog closing animation delay (milliseconds)
# Default: 200
# DIALOG_CLOSE_DELAY=200

# ===========================
# Docker Configuration
# ===========================

# Default number of log lines to fetch
# Default: 20
# DOCKER_DEFAULT_LOG_LINES=20

# Maximum buffer size for docker logs (bytes)
# Default: 10485760 (10MB)
# DOCKER_LOGS_MAX_BUFFER=10485760

# ===========================
# Icon Configuration
# ===========================

# Icon resize dimensions (pixels)
# Default: 64
# ICON_RESIZE_SIZE=64
