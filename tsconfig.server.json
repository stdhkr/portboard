{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./server",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
