{
  "name": "portbd",
  "version": "0.1.0",
  "description": "An open-source, browser-based port management dashboard for developers",
  "type": "module",
  "author": "Portboard Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stdhkr/portboard.git"
  },
  "bugs": {
    "url": "https://github.com/stdhkr/portboard/issues"
  },
  "homepage": "https://github.com/stdhkr/portboard#readme",
  "keywords": [
    "port-management",
    "developer-tools",
    "process-management",
    "docker",
    "monitoring",
    "dashboard",
    "localhost",
    "neo-brutalism"
  ],
  "bin": {
    "portboard": "dist/cli.js"
  },
  "files": [
    "dist",
    "public",
    ".env.example"
  ],
  "scripts": {
    "start": "node dist/cli.js",
    "dev": "vite",
    "dev:server": "NODE_ENV=development tsx --watch server/index.ts",
    "dev:all": "npm run dev:server & npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc -b && vite build",
    "build:server": "esbuild server/cli.ts --bundle --platform=node --format=esm --outfile=dist/cli.js --packages=external",
    "prepublishOnly": "npm run build",
    "lint": "biome lint ./src/ ./server/",
    "format": "biome format --write ./src/ ./server/",
    "check": "biome check --write ./src/ ./server/",
    "typecheck": "tsc --noEmit",
    "lint:all": "npm run typecheck && npm run check && npm run format",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "hono": "^4.10.4",
    "i18next": "^25.6.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jotai": "^2.15.1",
    "lucide-react": "^0.552.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.3.3",
    "sonner": "^2.0.7",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^24.6.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "esbuild": "^0.27.0",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }
}
